      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :review_title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :review_author %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :review_body %>
  </div>

  <div class="field">
    <%= form.hidden_field :picture_id, value: @picture.id %>
  </div>
<% if user_signed_in? %>
  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>
  <% end %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
