<p id="notice"><%= notice %></p>

<h1>Reviews</h1>


      <div class="title">Title</div>
      <div class="author">Author</div>
      <div class="body">Body</div>
      <div class="picture">Picture</div>
      <th colspan="3"></th>



    <% @reviews.each do |review| %>
      <div>
        <div class="review_title"><%= review.title %></div>
        <div class="review_author"><%= review.author %></div>
        <div class="review_body"><%= review.body %></div>
        <div class="review_picture"><%= review.picture %></div>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>



