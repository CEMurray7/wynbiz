
<div class="container" id="logo">


   <div class="row">


      <h1  style="text-align: center"><img style=""src="rsz_locallove.png" alt="Local Love Logo"/> Local Love</h1>
      <h3>A Place for Locals, and Local Businesses to Meet</h3>


      <h2>Pictures</h2>

      <div class="row">
         <% @pictures.each do |picture| %>
            <div class="col-md-6">


               <div class="each_title"><%= picture.title %></div>
               <div class="image_fit"><%=  link_to image_tag(picture.url, class: 'img-responsive'), picture_path(picture)%></div>

               <div class="buttons">
                  <p id="show"><%= link_to 'Click here to Write your Review', picture_path(picture) %></p>
                  <!-- <p id="edit"><%= link_to 'Edit', edit_picture_path(picture) %></p> -->
                  <!-- <p id="destroy"><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></p> -->
               </div>
            </div>
         <% end %>
         <br>
      </div>
   </div>
</div>

